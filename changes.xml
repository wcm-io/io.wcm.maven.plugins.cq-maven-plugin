<document xmlns="http://maven.apache.org/changes/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/2.0.0 https://maven.apache.org/xsd/changes-2.0.0.xsd">
  <body>

    <release version="1.2.2" date="2025-03-31">
      <action type="update" dev="sseifert">
        Switch to Java 11 as minimum version.
      </action>
    </release>

    <release version="1.2.0" date="2022-08-29">
      <action type="update" dev="sseifert">
        Use "sling:install-file" instead of "sling:install" goal to be compatible with sling-maven-plugin 3.x.
      </action>
    </release>

    <release version="1.1.4" date="2022-01-27">
      <action type="update" dev="sseifert">
        Declare Maven core dependencies as provided.
      </action>
    </release>

    <release version="1.1.2" date="2019-11-20">
      <action type="update" dev="sseifert">
        Detect bundle projects using bnd-maven-plugin.
      </action>
    </release>

    <release version="1.1.0" date="2019-08-20">
      <action type="add" dev="sseifert">
        Support installing content packages projects via cq:install.
      </action>
    </release>

    <release version="1.0.6" date="2019-01-15">
      <action type="update" dev="sseifert">
        Sling Maven Plugin Artifact Id changed to sling-maven-plugin.
      </action>
    </release>

    <release version="1.0.4" date="2016-04-29">
      <action type="update" dev="sseifert">
        Add m2e lifecycle mapping - ignore all goals by default in Eclipse.
      </action>
    </release>

    <release version="1.0.2" date="2014-10-22">
      <action type="update" dev="sseifert">
        Compile against Maven API 3.2.3 because cq:install did not work with Maven 3.1 and Maven 3.2.
      </action>
    </release>

    <release version="1.0.0" date="2014-10-07">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
